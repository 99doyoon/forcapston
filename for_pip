import speech_recognition as sr

# 오디오 캡처를 위한 recognizer와 마이크 객체 생성
r = sr.Recognizer()
mic = sr.Microphone()

# 마이크에서 오디오 캡처 시작
with mic as source:
    print("말하세요...")
    audio = r.listen(source)

# 구글 웹 음성 API를 사용하여 오디오를 텍스트로 변환
try:
    print("음성 인식 중...")
    text = r.recognize_google(audio, language='ko-KR')
    print("결과:")
    print(text)
except sr.UnknownValueError:
    print("음성 인식에 실패했습니다.")
except sr.RequestError as e:
    print("음성 인식 서비스에 요청할 수 없습니다; {0}".format(e))

//////////텍스트 출력
import os

def speak(text, voice='ko', variant='+f3'):
    os.system('espeak -v{}{} "{}"'.format(voice, variant, text))

speak("첫 번째 텍스트")
speak("두 번째 텍스트", variant='+m3')